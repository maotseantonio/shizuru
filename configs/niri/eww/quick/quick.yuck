(defwidget music []
	(box :orientation "v" :space-evenly "false" :spacing 20
		(box :orientation "h" :space-evenly "false" :halign "center"
			(box :class "bgimage" :orientation "v" :style "background-image: url('${music-art}');"
				(box :orientation "h" :valign "start" :style "margin: 10px;" :halign "end" :space-evenly "false" :class "boxtiempo" :spacing 3
					(label :class "text" :xalign 1 :text music-artist)
				)
				(box :orientation "h" :valign "end" :style "margin: 10px;" :halign "start" :space-evenly "false" :class "boxtiempo" :spacing 3
					(label
						:class "text"
						:text {music-position ?: "0:00"}
					)
					(label :class "text" :text "|")
					(label
						:class "text"
						:text {music-length ?: "0:00"}
					)
				)
			)
			(box :orientation "v" :class "byside" :style "padding: 7px;"
				(box :orientation "v" :valign "start"
					(button
						:class {music-player != "spotify" ? "text" : "eveniconac"} :style "margin: 7px;"
						{music-player != "spotify" ? "󰎆" : "󰓇"}
					)
					(shuffle
						:action {music-player == "MPD" ? "mpc random" : "playerctl -p ${music-player} shuffle toggle"}
						:status shuffle
					)
					(loop
						:action {loop == "None" ? "playerctl -p ${music-player} loop playlist" :
						loop == "Off" ? "mpc repeat on" :
						loop == "On" ? "mpc repeat off" :
						loop == "Playlist" ? "playerctl -p ${music-player} loop track" : "playerctl -p ${music-player} loop none"}
						:icon  {loop == "Track" ? "󰑘" :
						loop == "Playlist" || loop == "On" ? "󰑖" : "󰑗"}
						:status loop
					)
					(eventbox :cursor "pointer" :class "evenicon" :onclick "${eww} open quick --toggle && alacritty --class playlist -e ncmpcpp &" "󰲸")
				)
				(box :orientation "v" :valign "end" :spacing 7
					(button
						:class "evenicon"
						:onclick "scripts/MediaControl --previous &"
						(label :text "󰙣" :style "margin-left:-2px; margin-top: 0px;")
					)
					(button
						:class "evenicon"
						:onclick "scripts/MediaControl --toggle"
						(label :text "" :style "margin-left:-2px; margin-top: 0px;")
					)
					(button
						:class "play"
						:onclick "scripts/MediaControl --toggle &"
						(label :text "" :style "margin-left:-2px; margin-top: 0px;")
					)
					(button
						:class "evenicon"
						:onclick "scripts/MediaControl --stop"
						(label :text "" :style "margin-left:-2px; margin-top: 0px;")
					)
					(button
						:class "evenicon"
						:onclick "scripts/MediaControl --next &"
						(label :text "󰙡" :style "margin-left:-2px; margin-top: 0px;")
					)
				)
			)
		)
		(box :orientation "v"
			(box :orientation "v" :space-evenly "false" :halign "end" :spacing 5
				(label :class "text" :xalign 1 :text music-title)
			)
			(box :orientation "h" :space-evenly "false" :spacing 10 :halign "center"
				(label :class "eveniconac" :text "󰎇")
				(eventbox
					:cursor "pointer"
					(scale
						:onchange {music-player == "MPD" ? "mpc seek {}" : "playerctl -p ${music-player} position {}"}
						:min 0
						:max {music-lengths ?: "100"}
						:value {music-positions ?: "0"}
					)
				)
			)
			(box :orientation "h" :space-evenly "false" :spacing 10 :halign "center"
				(label :class "eveniconac" :text "")
				(scale :min 0 :max 101 :value volume_percent :active "true" :onchange "pactl set-sink-volume @DEFAULT_SINK@ {}%")
			)
		)
	)
)

