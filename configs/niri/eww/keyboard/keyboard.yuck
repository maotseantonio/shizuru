(defwidget keyboard_event []
	(eventbox :onhoverlost "${eww} open keyboard --toggle &" (keyboard))
)

(defwindow keyboard
	:stacking "fg"
	:monitor 0
	:geometry (geometry :x 1450 :y -25)
	(keyboard_event)
)
