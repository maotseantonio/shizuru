<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <object class="GtkWindow" id="calendar_window">
    <property name="title">Calendar</property>
    <property name="default-width">400</property>
    <property name="default-height">300</property>
    
    <child>
      <object class="GtkBox" id="main_box">
        <property name="orientation">vertical</property>
        
        <!-- Calendar Widget -->
        <child>
          <object class="GtkCalendar" id="main_calendar">
            <property name="show-week-numbers">True</property>
            <property name="show-details">True</property>
          </object>
        </child>
        
        <!-- Action Buttons -->
        <child>
          <object class="GtkButtonBox" id="button_box">
            <property name="layout-style">end</property>
            
            <child>
              <object class="GtkButton" id="today_button">
                <property name="label">Today</property>
              </object>
            </child>
            
            <child>
              <object class="GtkButton" id="close_button">
                <property name="label">Close</property>
              </object>
            </child>
          </object>
        </child>
      </object>
    </child>
  </object>
</interface>

